{
  "name": "@platform-ai/autonav",
  "version": "1.0.0",
  "description": "CLI tools and Claude SDK Adapter for Platform AI navigators",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "autonav": "./dist/cli/autonav.js",
    "nav-init": "./dist/cli/nav-init.js",
    "nav-query": "./dist/cli/nav-query.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && node scripts/post-build.mjs",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "platform-ai",
    "navigator",
    "cli",
    "claude",
    "agent-sdk"
  ],
  "author": "Terra",
  "license": "TBD",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@octokit/rest": "^20.0.2",
    "@platform-ai/communication-layer": "*",
    "@slack/web-api": "^6.11.2",
    "@types/micromatch": "^4.0.10",
    "chokidar": "^3.5.3",
    "micromatch": "^4.0.8",
    "tar": "^6.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/tar": "^6.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
